<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TbCollectMapper">

    <resultMap type="TbCollect" id="TbCollectResult">
        <result property="newsId"    column="news_id"    />
        <result property="userId"    column="user_id"    />
        <result property="tableName"    column="table_name"    />
        <result property="articleId"    column="article_id"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTbCollectVo">
        select news_id, user_id, table_name, article_id, status, create_by, create_time, update_by, update_time from tb_collect
    </sql>

    <select id="selectTbCollectList" parameterType="TbCollect" resultMap="TbCollectResult">
        <include refid="selectTbCollectVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="tableName != null  and tableName != ''"> and table_name like concat('%', #{tableName}, '%')</if>
            <if test="articleId != null "> and article_id = #{articleId}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    <!--    通过用户user_id查询-->
    <select id="selectTbCollectListByUserId" parameterType="Long" resultMap="TbCollectResult">
        SELECT table_name, article_id
        FROM tb_collect
        WHERE user_id = #{userId}
        ORDER BY table_name DESC
    </select>

    <select id="selectTbCollectByNewsId" parameterType="Long" resultMap="TbCollectResult">
        <include refid="selectTbCollectVo"/>
        where news_id = #{newsId}
    </select>

    <insert id="insertTbCollect" parameterType="TbCollect" useGeneratedKeys="true" keyProperty="newsId">
        insert into tb_collect
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="tableName != null">table_name,</if>
            <if test="articleId != null">article_id,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="tableName != null">#{tableName},</if>
            <if test="articleId != null">#{articleId},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateTbCollect" parameterType="TbCollect">
        update tb_collect
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="tableName != null">table_name = #{tableName},</if>
            <if test="articleId != null">article_id = #{articleId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where news_id = #{newsId}
    </update>

    <delete id="deleteTbCollectByNewsId" parameterType="Long">
        delete from tb_collect where news_id = #{newsId}
    </delete>

    <delete id="deleteTbCollectByMultiId" >
        delete from tb_collect where user_id = #{userId} AND table_name = #{tableName} AND article_id = #{articleId}
    </delete>


    <delete id="deleteTbCollectByNewsIds" parameterType="String">
        delete from tb_collect where news_id in
        <foreach item="newsId" collection="array" open="(" separator="," close=")">
            #{newsId}
        </foreach>
    </delete>


</mapper>