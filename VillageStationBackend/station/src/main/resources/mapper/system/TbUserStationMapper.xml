<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TbUserStationMapper">

    <resultMap type="TbUserStation" id="TbUserStationResult">
        <result property="newsId"    column="news_id"    />
        <result property="userId"    column="user_id"    />
        <result property="stationId"    column="station_id"    />
    </resultMap>

    <sql id="selectTbUserStationVo">
        select news_id, user_id, station_id from tb_user_station
    </sql>

    <select id="selectTbUserStationList" parameterType="TbUserStation" resultMap="TbUserStationResult">
        <include refid="selectTbUserStationVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="stationId != null "> and station_id = #{stationId}</if>
        </where>
    </select>

    <select id="selectTbUserStationByNewsId" parameterType="Long" resultMap="TbUserStationResult">
        <include refid="selectTbUserStationVo"/>
        where news_id = #{newsId}
    </select>

    <insert id="insertTbUserStation" parameterType="TbUserStation" useGeneratedKeys="true" keyProperty="newsId">
        insert into tb_user_station
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="stationId != null">station_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="stationId != null">#{stationId},</if>
        </trim>
    </insert>

    <update id="updateTbUserStation" parameterType="TbUserStation">
        update tb_user_station
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="stationId != null">station_id = #{stationId},</if>
        </trim>
        where news_id = #{newsId}
    </update>

    <delete id="deleteTbUserStationByNewsId" parameterType="Long">
        delete from tb_user_station where news_id = #{newsId}
    </delete>

    <delete id="deleteTbUserStationByNewsIds" parameterType="String">
        delete from tb_user_station where news_id in
        <foreach item="newsId" collection="array" open="(" separator="," close=")">
            #{newsId}
        </foreach>
    </delete>

    <select id="selectTbUserStationByUserId" parameterType="Long" resultMap="TbUserStationResult">
        <include refid="selectTbUserStationVo"/>
        where user_id = #{userId}
    </select>
</mapper>